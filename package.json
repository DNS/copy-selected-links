{
    "author": "Marnes <marnick.leau@gmail.com>",
    "dependencies": {
        "webextension-polyfill-ts": "^0.11.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.20.0",
        "@typescript-eslint/parser": "^2.20.0",
        "bestzip": "^2.1.2",
        "del-cli": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-web-extension": "^1.6.1",
        "prettier": "^1.19.1",
        "sass": "^1.25.0",
        "typescript": "^3.3.3",
        "web-ext": "^2.9.3"
    },
    "license": "MPL-2.0",
    "name": "copy-selected-links",
    "private": true,
    "repository": "https://gitlab.com/Marnes/copy-selected-links.git",
    "scripts": {
        "build": "run-s clean prettify lint compile bundle review",
        "compile": "parcel build src/*.* --out-dir extension --no-autoinstall",
        "bundle": "web-ext build",
        "clean": "del-cli dist extension .cache",
        "develop": "npm-run-all clean compile -plr compile:watch bundle:watch",
        "develop:chrome": "npm-run-all clean compile -plr compile:watch bundle:watch:chrome",
        "lint": "run-p lint:addon lint:project",
        "lint:addon": "eslint src/**/*.ts",
        "lint:project": "eslint *.js",
        "prettify": "run-p prettify:addon prettify:project",
        "prettify:addon": "prettier src/**/*.{html,json,scss,ts} --write",
        "prettify:project": "prettier *.{js,json,md,yml} --write",
        "review": "bestzip dist/sources.zip .editorconfig .eslintrc.json .gitignore .node-version .prettierrc.json license.md package.json readme.md src tsconfig.json web-ext-config.js yarn.lock",
        "compile:watch": "parcel watch src/*.* --out-dir extension --no-autoinstall --no-hmr",
        "bundle:watch": "web-ext run",
        "bundle:watch:chrome": "web-ext run -t chromium"
    },
    "version": "0.0.0"
}
