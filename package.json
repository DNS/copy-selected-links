{
	"name": "copy-selected-links",
	"version": "0.0.0",
	"repository": "https://gitlab.com/Marnes/copy-selected-links.git",
	"author": "Marnes <marnick.leau@gmail.com>",
	"license": "MPL-2.0",
	"private": true,
	"devDependencies": {
		"bestzip": "^2.1.2",
		"concurrently": "^4.1.0",
		"ts-loader": "^5.3.3",
		"tslint": "^5.12.1",
		"typescript": "^3.3.3",
		"web-ext": "^2.9.3",
		"webpack": "^4.29.4",
		"webpack-cli": "^3.2.3"
	},
	"scripts": {
		"clean": "del-cli dist extension .cache",
		"lint:ts": "tslint -p .",
		"build:parcel": "parcel build src/*.* src/images/* --out-dir extension --no-autoinstall",
		"build:webext": "web-ext build",
		"watch:parcel": "parcel watch src/*.* src/images/* --out-dir extension --no-autoinstall --no-hmr",
		"watch:webext": "web-ext run",
		"watch:webext:chrome": "web-ext run -t chromium",
		"review": "bestzip dist/sources.zip .editorconfig .gitignore .node-version license.md package.json readme.md src tsconfig.json tslint.json web-ext-config.js yarn.lock",
		"build": "run-s clean lint:ts build:parcel build:webext review",
		"develop": "npm-run-all clean build:parcel -plr watch:parcel watch:webext",
		"develop:chrome": "npm-run-all clean build:parcel -plr watch:parcel watch:webext:chrome"
	},
	"dependencies": {
		"webextension-polyfill-ts": "^0.11.0"
	}
}
